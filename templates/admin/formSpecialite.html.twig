{% extends 'base.html.twig' %}
{% block title %} Ajout ou modification de spécialité {% endblock %}
{% block body %}
     {{ form_start(form) }}
        <div class="form-group">
               {{ form_widget(form) }}
        </div>
        <div>
            <button type="submit" class="btn btn-success">
                {% if id %}
                    Modifier la spécialité

                {% else %}
                    Enregistrer la spécialité

                {% endif %}
            </button>
            <button type="reset" class="btn btn-danger">Effacer les données</button>
        </div>
    {{ form_end(form) }}
{% endblock %}